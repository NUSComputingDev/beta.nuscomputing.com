<table align="center">
	<thead>
		<tr>
			<th>ID</th>
			<th>User</th>
			<th>Faculty</th>
			<th>Location</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% if ballots %>
			<% ballots.each do |ballot| %>
				<tr id='<%= "ballot-#{ballot.id}" %>'>
					<td><%= ballot.id %></td>
					<td><%= ballot.user.uid %></td>
					<td><%= ballot.user.faculty %></td>
					<td><%= ballot.location %></td>
					<td>
						<%= link_to "Edit", edit_mc_locker_locker_ballot_path(ballot), class: "button radius info" %>
						<%= link_to "Delete", mc_locker_locker_ballot_path(ballot), method: :delete, data: {confirm: "Are you sure?"}, remote: true, class: "button radius alert" %>
					</td>
				</tr>
			<% end %>
			<%= paginate ballots %>
		<% end %>
	</tbody>
</table>
