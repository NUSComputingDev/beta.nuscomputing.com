<%= simple_form_for [:mc, :borrow, @item] do |f| %>
	<%= f.input :label %>
	<%= f.association :type, include_blank: false %>
	<%= f.input :state, collection: Item.states.symbolize_keys.keys, include_blank: false %>
	<%= f.input :status, collection: Item.statuses.symbolize_keys.keys, include_blank: false %>
	<%= f.input :image, as: :file %>
	<%= f.button :submit %>
<% end %>
