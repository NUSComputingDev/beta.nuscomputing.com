<h1>Transaction #<%= @item_transaction.id %></h1>
<div id="transaction-status">Status: <%= @item_transaction.status.capitalize %></div>
<div class="panel">
	<h2 class="text-center">Item Requested</h2>
	<div class="row">
		<div class="small-6 medium-3 large-3 columns"><%= image_tag @item_transaction.item.image.url(:medium), class: "th radius" %></div>
		<div class="small-6 medium-9 large-9 columns">
			<%= link_to @item_transaction.item.label, mc_borrow_item_path(@item_transaction.item) %>
			<div id="item-status">Status: <%= @item_transaction.item.status.capitalize %></div>
			<div>State: <%= @item_transaction.item.state.capitalize %></div>
			<hr>
			
			<div>Request Id: <%= link_to @item_transaction.request.id, mc_borrow_item_request_path(@item_transaction.request) %></div>
			<div>Requested By: <%= mail_to @item_transaction.request.user.email %></div>
			<div>Created At: <%= local_time @item_transaction.request.created_at %></div>
			<div>Processed By: <%= @item_transaction.request.processor.email %></div>
		</div>
	</div>
</div>
<div class="panel" id="transaction-info">
	<%= render partial: 'trans_info', locals: { item_transaction: @item_transaction } %>
</div>
<div id="actions">
	<%= render 'action' %>
</div>

