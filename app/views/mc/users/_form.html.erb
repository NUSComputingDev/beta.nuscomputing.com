<%= simple_form_for [:mc, @user] do |f| %>
  <%= f.input :name, label: 'Student Name' %>
  <%= f.input :email, label: 'Student NUS Email' %>
  <%= f.input :uid, label: 'Student NUSNET ID (e.g. a1234567 or e1234567)' %>
  <%= f.input :faculty, label: 'Student Home Faculty', input_html: {value: f.object.faculty || 'School of Computing'} %>
  <br>
  <%= f.button :submit, 'Submit', class: 'radius success' %>
  <%= link_to 'Cancel', :back, class: 'radius button alert' %>
<% end %>
