<div class="row">

  <div class="large-12 columns">
    <h3 class="bold">Account Information</h3>
  </div>

  <div class="large-12 columns">
    <%= render 'user' %>
    <br>
  </div>

  <div class="large-12 columns">
    <ul class="button-group radius">
      <li><%= link_to 'Back', mc_users_path, class: 'button small info' %></li>
      <li><%= link_to 'Edit', edit_mc_user_path, class: 'button small success' %></li>
      <li>
        <%= link_to 'Delete',
                    mc_user_path,
                    class: 'button small alert',
                    method: :delete,
                    data: { confirm: "Deleting \"#{@user.name}\". Are you sure?" }
        %>
      </li>
    </ul>
  </div>

</div>