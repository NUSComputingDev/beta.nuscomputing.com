<div class="row">

  <div class='small-12 columns'>

    <table width="100%">
      <tr>
        <th>Name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td><%= @user.gender %></td>
      </tr>
      <tr>
        <th>UserID</th>
        <td><%= @user.uid %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>Faculty</th>
        <td><%= @user.faculty %></td>
      </tr>
      <tr>
        <th>First Major</th>
        <td><%= @user.first_major %></td>
      </tr>
      <tr>
        <th>Second Major</th>
        <td><%= @user.second_major.empty? ? 'N/A' : @user.second_major %></td>
      </tr>
      <tr>
        <th>Matriculation Year</th>
        <td><%= @user.matriculation_year %></td>
      </tr>
    </table>

  </div>

  <div class='small-12 columns'>

    <table width="100%">
      <tr>
        <th>Account ID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>Authentication Provider</th>
        <td><%= @user.provider %></td>
      </tr>
    </table>

  </div>

</div>