<div class="member-panel row panel">
    <div class="columns small-12 position">
        <h3><%= member.position %></h3>
    </div>
    <div class="columns small-12 medium-4 large-3">
        <%= image_tag "photos/18MC/"+member.imgname+".jpg", class: "th radius" %>
    </div>
    <div class="columns small-12 medium-8 large-9">
        <div class="name">
            <%= member.name %>
        </div>
        <div class="course-year">
            <p><%= member.course %>, Year <%= member.year %></p>
        </div>
        <div class="description">
            <p align="justify"><%= member.description %></p>
        </div>
    </div>
</div>
