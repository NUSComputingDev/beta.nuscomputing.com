<% if @round %>
  <div data-alert class="panel alert-box radius">
    <a href="#" class="close">&times;</a>
    <%= fa_icon 'check-square-o 2x', class: 'round-open-text' %>
    <strong class="round-open-text">Ballot Round Open</strong>
    <p>
      Balloting for <strong><%= "#{@round.acad_year} #{@round.label}" %></strong> has begun. Don't miss it!
    </p>
  </div>
<% end %>