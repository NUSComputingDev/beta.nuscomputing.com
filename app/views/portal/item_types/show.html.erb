<h1 class="text-center"><%= @item_type.name %></h1>
<div class="row">
	<div class="small-6 large-3 columns"><%= image_tag @item_type.image.url(:medium), class: "th radius" %></div>
	<div class="small-6 large-9 columns"><p><%= @item_type.description %></p></div>
</div>
<hr>
<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-4">
	<% @item_type.items.order(:status, :state, :label).each do |item| %>
		<li><%= render item %></li>
	<% end %>
</ul>
